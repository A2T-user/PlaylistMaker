<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Текст верхней строки окон -->
    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/grand_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="RegularTextStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ArtistName" parent="RegularTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/colorSmallText</item>

    </style>

    <!-- Текст строк меню SettingsActivity -->
    <style name="SettingsTextStyle" parent="RegularTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_start_text</item>
        <item name="android:layout_marginVertical">@dimen/margin_vertical_text</item>
    </style>

    <!-- Текст строк меню SettingsActivity -->
    <style name="TextViewAndCompoundImage" parent="SettingsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="drawableTint">?attr/colorAccent</item>
    </style>

    <style name="SearchButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorBackground</item>
        <item name="android:background">@drawable/rectangle_radius_200</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>