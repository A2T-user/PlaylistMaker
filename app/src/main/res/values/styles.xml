<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Текст верхней строки окон -->
    <style name="TitleStyle">
        <item name="android:textSize">@dimen/grand_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!-- Кнопки MainActivity -->
    <style name="GrandButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/grand_text_size</item>
        <item name="cornerRadius">@dimen/radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/ic_padding</item>
        <item name="iconTint">?attr/colorAccent</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="RegularTextStyle">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ArtistName" parent="RegularTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?attr/colorSmallText</item>

    </style>

    <!-- Текст строк меню SettingsActivity -->
    <style name="SettingsTextStyle" parent="RegularTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_start_text</item>
        <item name="android:layout_marginVertical">@dimen/margin_vertical_text</item>
    </style>

    <!-- Текст строк меню SettingsActivity -->
    <style name="TextViewAndCompaundImage" parent="SettingsTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">0</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="drawableTint">?attr/colorAccent</item>
    </style>

</resources>