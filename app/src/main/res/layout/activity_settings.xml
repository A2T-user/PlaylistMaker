<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Panel Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            tools:ignore="contentDescription"
            android:src="@drawable/ic_arrow"
            app:tint="?attr/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:text="@string/settings"
            android:textColor="?attr/colorAccent"
            android:textSize="@dimen/grand_text_size"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight = "500"/>

    </LinearLayout>

    <!-- Темная тема -->
    <LinearLayout style="@style/SettingsLinerStyle">

        <TextView
            android:text="@string/dark_theme"
            style="@style/SettingsTextStyle" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"/>

    </LinearLayout>

    <!-- Поделиться приложением -->
    <LinearLayout
        android:id="@+id/ll_send"
        style="@style/SettingsLinerStyle">

        <TextView
            android:text="@string/set_send"
            style="@style/SettingsTextStyle" />

        <ImageView
            android:src="@drawable/ic_send"
            tools:ignore="contentDescription"
            style="@style/SettingsIconStyle" />

    </LinearLayout>

    <!-- Написать в поддержку -->
    <LinearLayout
        android:id="@+id/ll_support"
        style="@style/SettingsLinerStyle">

        <TextView
            android:text="@string/support"
            style="@style/SettingsTextStyle" />

        <ImageView
            android:src="@drawable/ic_support"
            tools:ignore="contentDescription"
            style="@style/SettingsIconStyle" />

    </LinearLayout>

    <!-- Пользовательское соглашение -->
    <LinearLayout
        android:id="@+id/ll_user_agreement"
        style="@style/SettingsLinerStyle">

        <TextView
            android:text="@string/user_agreement"
            style="@style/SettingsTextStyle" />

        <ImageView
            android:src="@drawable/ic_arrow_forward"
            tools:ignore="contentDescription"
            style="@style/SettingsIconStyle" />

    </LinearLayout>

</LinearLayout>